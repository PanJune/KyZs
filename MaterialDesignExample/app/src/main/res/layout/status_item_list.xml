<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/all_layout"
        android:clickable="true"
        android:paddingBottom="16dp"
        android:background="@drawable/btn_white_lightgrey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头像、人名、时间、类别-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <!--昵称，时间-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/status_name_tv"
                    android:text="张坚"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/status_time_tv"
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:text="一天前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!--内容-->
        <TextView
            android:textSize="16sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/status_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你好吗"/>


        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--图片-->
            <LinearLayout
                android:id="@+id/status_image_layout"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>
            <!--评论-->
            <TextView
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/btn_transparent_lightgrey"
                android:id="@+id/status_comment_btn"
                android:text="0"
                android:drawableLeft="@drawable/ic_insert_comment_black_18dp"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>